<% @books.each do |book| %>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class='tekst'><%= book.title %></h3>
    </div>
    <div class="panel-body">
        <div class="row featurette">
            <div class="col-md-7">
                <p class='tekst'><strong>Author: </strong><%= book.author %></p>
                <p class='tekst'><strong>Title: </strong><%= book.title %></p>
                <p class='tekst'><strong>Isbn: </strong><%= book.isbn %></p>
                <p class='tekst'><strong>Price: </strong><%= book.price %></p>
                <a href='<%= edit_book_path(book) %>'><button type="button" class="btn btn-xs btn-success">Edit &raquo;</button></a>
                <a href='/books/<%= book.id %>'><button type="button" class="btn btn-xs btn-success">Show &raquo;</button></a>
                <%= link_to book, method: :delete, data: { confirm: 'Are you sure?' } do %><button type="button" class="btn btn-xs btn-success">Destroy &raquo;</button><% end %>
            </div>
            <br />
            <div class="col-md-5">
                <%= image_tag(book.cover_url(:thumb), :class => 'img-responsive')  if book.cover? %><br />
                <% if book.cover? %>
                    <a href='<%= crop_book_path(book) %>'><br /><button type="button" class="btn btn-xs btn-success">Edit &raquo;</button></a>
                <% end %>
            </div>
        </div>
    </div>
</div>
<% end %>